<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_size_10"
        android:layout_marginLeft="@dimen/dimen_size_10"
        android:layout_marginRight="@dimen/dimen_size_10"
        android:background="@drawable/rec_bg_white_stroke_divider"
        android:padding="@dimen/dimen_size_15">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/item_report_img"
            android:layout_width="@dimen/dimen_size_50"
            android:layout_height="@dimen/dimen_size_50"
            android:layout_marginStart="@dimen/dimen_size_5"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_user"
            app:riv_oval="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_size_15"
            android:layout_marginRight="@dimen/dimen_size_15"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_report_name"
                style="@style/Font15_black_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名" />

            <TextView
                android:id="@+id/item_report_phone"
                style="@style/Font14_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_size_8"
                android:text="手机 " />

            <TextView
                android:id="@+id/item_report_idcard"
                style="@style/Font14_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_size_8"
                android:text="身份证号 " />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>