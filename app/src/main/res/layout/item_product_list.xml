<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/item_product_divider3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginTop="@dimen/dimen_size_10"
        android:background="@color/divider"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/item_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/dimen_size_10">

            <ImageView
                android:id="@+id/item_product_img"
                android:layout_width="@dimen/dimen_size_45"
                android:layout_height="@dimen/dimen_size_45"
                android:layout_marginStart="@dimen/dimen_size_5"
                android:src="@mipmap/default_user"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/item_product_name"
                style="@style/Font15_black_dark"
                android:layout_width="0dp"
                android:layout_height="@dimen/line_height"
                android:layout_marginStart="@dimen/dimen_size_10"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="名称" />

            <ImageView
                android:layout_width="@dimen/dimen_size_13"
                android:layout_height="@dimen/dimen_size_13"
                android:layout_marginEnd="@dimen/dimen_size_5"
                android:src="@mipmap/arrow_right"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <View
            android:id="@+id/item_product_divider1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_marginLeft="@dimen/dimen_size_10"
            android:layout_marginRight="@dimen/dimen_size_10"
            android:background="@color/divider" />

    </LinearLayout>

    <View
        android:id="@+id/item_product_divider2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider"
        android:visibility="gone" />

</LinearLayout>