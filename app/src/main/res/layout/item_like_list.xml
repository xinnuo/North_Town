<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_like"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dimen_size_15"
        android:paddingRight="@dimen/dimen_size_15">

        <TextView
            android:id="@+id/item_like_name"
            style="@style/Font14_black_dark"
            android:layout_width="0dp"
            android:layout_height="@dimen/line_height"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="名称" />

        <CheckBox
            android:id="@+id/item_like_check"
            android:layout_width="@dimen/dimen_size_20"
            android:layout_height="@dimen/dimen_size_20"
            android:background="@drawable/cb_like_selector"
            android:button="@null"
            android:clickable="false" />

    </LinearLayout>

    <View
        android:id="@+id/item_like_divider1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginLeft="@dimen/dimen_size_15"
        android:layout_marginRight="@dimen/dimen_size_15"
        android:background="@color/divider" />

    <View
        android:id="@+id/item_like_divider2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider"
        android:visibility="gone" />

</LinearLayout>