<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_35"
        android:layout_margin="@dimen/dimen_size_10"
        android:background="@drawable/rec_ova_bg_white_stroke_divider"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/dimen_size_16"
            android:layout_height="@dimen/dimen_size_16"
            android:layout_marginStart="@dimen/dimen_size_15"
            android:src="@mipmap/search"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/search_edit"
            style="@style/Font14_black_dark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:hint="输入经纪人名称或手机"
            android:imeOptions="actionSearch"
            android:paddingEnd="@dimen/dimen_size_10"
            android:paddingStart="@dimen/dimen_size_10"
            android:singleLine="true" />

    </LinearLayout>

</LinearLayout>
