                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_size_10"
                    android:drawableStart="@mipmap/icon_dot"
                    android:drawablePadding="@dimen/dimen_size_3"
